#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int num1,num2,sum;
	printf("Please enter 2 numbers : ");
	scanf("%d",&num1,&num2);
	sum=num1+num2;
	printf("Result is : %d",sum);
	return EXIT_SUCCESS;
}
